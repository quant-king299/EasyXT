{
    "application": {
        "name": "EasyXT量化交易学习平台",
        "version": "2.5",
        "description": "整合所有01-10学习案例，项目管理功能和TodoList引擎v2.5"
    },
    "qmt": {
        "default_path": "D:/国金证券QMT交易端",
        "userdata_path": "D:/国金证券QMT交易端/userdata_mini",
        "auto_connect": true,
        "connection_timeout": 30
    },
    "learning_cases": {
        "auto_load": true,
        "default_params": {
            "股票代码": "000001.SZ",
            "数据条数": 100,
            "交易数量": 1000,
            "初始资金": 100000
        },
        "execution_timeout": 120
    },
    "project_management": {
        "auto_save": true,
        "save_interval": 300,
        "backup_count": 5,
        "default_projects": [
            "量化交易学习",
            "策略开发项目"
        ]
    },
    "ui": {
        "theme": "default",
        "font_family": "Microsoft YaHei",
        "font_size": 9,
        "window_size": [1600, 1000],
        "splitter_sizes": [600, 1000]
    },
    "logging": {
        "level": "INFO",
        "max_lines": 1000,
        "auto_save": false,
        "log_file": "logs/application.log"
    },
    "features": {
        "enable_charts": true,
        "enable_data_analysis": true,
        "enable_trading": true,
        "enable_batch_execution": true,
        "enable_code_viewer": true
    }
}